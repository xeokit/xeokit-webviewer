{
    "private": true,
    "version": "0.1.0",
    "name": "xeokit",
    "author": "Lindsay Kay <xeolabs.com>",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/xeokit/xeokit.git"
    },
    "license": "SEE LICENSE IN LICENSE.md",
    "scripts": {
        "dist": "turbo run dist --concurrency 100",
        "test": "turbo run test --concurrency 100 --continue || node scripts/test-html-report/index.mjs",
        "docs": "rimraf packages/website/docs && mkdir packages/website/docs && turbo run docs && typedoc --entryPointStrategy merge \"./packages/website/docs/json/*.json\" --tsconfig ./packages/config/tsconfig.typedoc.json",
        "website-build-xeokit-lib": "turbo run website-build-xeokit-lib",
        "website-convert-models": "turbo run website-convert-models",
        "website-example-snapshots": "turbo run website-example-snapshots",
        "website-build": "turbo run website-build",
        "_publish-packages": "turbo run build lint test && changeset version && changeset publish"
    },
    "devDependencies": {
        "@changesets/cli": "^2.27.1",
        "@kayahr/jest-electron-runner": "^29.11.0",
        "@types/command-exists": "1.2.0",
        "@types/jest": "^29.2.5",
        "@types/ndarray": "1.0.11",
        "@types/node": "18.11.10",
        "@types/node-gzip": "1.1.0",
        "@typescript-eslint/eslint-plugin": "5.45.0",
        "@typescript-eslint/parser": "5.45.0",
        "concurrently": "7.6.0",
        "copyfiles": "^2.4.1",
        "esbuild": "^0.20.0",
        "eslint": "8.29.0",
        "eslint-config-prettier": "8.5.0",
        "http-server": "^14.1.1",
        "jest": "^29.7.0",
        "jest-environment-jsdom": "^29.7.0",
        "jest-html-reporter": "^3.10.2",
        "jsdom": "^24.0.0",
        "microbundle": "^0.15.1",
        "mikktspace": "1.1.1",
        "mkdirp": "^3.0.1",
        "node-html-parser": "^6.1.12",
        "nyc": "15.1.0",
        "prettier": "2.8.0",
        "rimraf": "^5.0.0",
        "rollup": "^3.21.0",
        "source-map-support": "0.5.21",
        "tap-spec": "5.0.0",
        "ts-loader": "^9.4.2",
        "ts-node": "10.9.1",
        "turbo": "^2.0.9",
        "typedoc": "^0.27.6",
        "typescript": "^5.7.2",
        "webpack": "^5.80.0",
        "webpack-cli": "^5.0.1",
        "webpack-node-externals": "^3.0.0"
    },
    "optionalDependencies": {
        "canvas": "^2.11.2"
    },
    "packageManager": "pnpm@8.7.6"
